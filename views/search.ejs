<% include partials/header %>

<div class="container">
    <div class="row">
        <div style="width: 45%; margin: 30px auto;">
            <h1 style="text-align: center;">Search Weather at Your Location:</h1>
            <p style="text-align: center;">Enter your GPS coordinates in DD (decimal degrees)</p>
            <form action="results" method="GET">
                    <div class="form-group">
                        <input class="form-control" type="number" name="lattitude" min="-90" max="90" step="0.01" placeholder="Lattitude" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="longitude" min="-180" max="180" step="0.01" placeholder="Longitude" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="submit">
                    </div>
            </form>
            
            <a href="/"><i class="cloud icon" ></i>Refresh form</a>
        </div>
    </div>
